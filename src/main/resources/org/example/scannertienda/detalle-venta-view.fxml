<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.scannertienda.controller.DetalleVentaController">
    <VBox alignment="TOP_CENTER" prefHeight="500.0" prefWidth="500.0" spacing="15.0" style="-fx-background-color: #f8f8f8;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>

        <Label text="Detalle de Venta" textFill="#3f51b5">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <Label fx:id="lblIdVenta" text="ID: #0" style="-fx-font-weight: bold; -fx-font-size: 16px;" />

        <TableView fx:id="tablaDetalle" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colNombreProducto" prefWidth="180.0" text="Nombre Producto" />
                <TableColumn fx:id="colCantidad" prefWidth="70.0" text="Cantidad" />
                <TableColumn fx:id="colPrecioUnitario" prefWidth="100.0" text="P. Unit. (Q)" />
                <TableColumn fx:id="colSubtotal" prefWidth="100.0" text="Subtotal (Q)" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

        <HBox alignment="CENTER_RIGHT" spacing="10.0">
            <Label text="Total Final de la Venta:" />
            <Label fx:id="lblTotal" text="Q0.00" textFill="#dc3545">
                <font>
                    <Font name="System Bold" size="20.0" />
                </font>
            </Label>
        </HBox>
    </VBox>
</AnchorPane>