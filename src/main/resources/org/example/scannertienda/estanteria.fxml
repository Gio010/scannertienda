<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="700.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.scannertienda.controller.EstanteriaController">

    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: #3f51b5;">
            <children>
                <Button onAction="#volverAInicio" style="-fx-background-color: #ff5722; -fx-text-fill: white; -fx-font-weight: bold;" text="← Volver a Inicio">
                    <HBox.margin>
                        <Insets left="20.0" right="20.0" />
                    </HBox.margin>
                </Button>
                <Label text="🛒 Estantería de Productos" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                </Label>
            </children>
        </HBox>
    </top>

    <center>
        <SplitPane dividerPositions="0.75" BorderPane.alignment="CENTER">
            <items>
                <AnchorPane>
                    <ScrollPane fitToWidth="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"
                                style="-fx-background-color: #795548;"> <content>
                        <VBox fx:id="contenedorEstantes" alignment="TOP_CENTER" spacing="10" style="-fx-background-color: #795548;">
                            <padding>
                                <Insets top="10" bottom="10" left="10" right="10"/>
                            </padding>
                        </VBox>
                    </content>
                    </ScrollPane>
                </AnchorPane>

                <AnchorPane>
                    <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                        <fx:include fx:id="carritoInc" source="carrito.view.fxml" />
                    </VBox>
                </AnchorPane>
            </items>
        </SplitPane>
    </center>
</BorderPane>