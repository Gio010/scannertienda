<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.scannertienda.controller.AdminController">
    <SplitPane dividerPositions="0.65" layoutX="123.0" layoutY="163.0" prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <items>
            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
                <children>
                    <Label layoutX="14.0" layoutY="14.0" text="Inventario de Productos">
                        <font>
                            <Font name="System Bold" size="20.0" />
                        </font>
                    </Label>
                    <TableView fx:id="tablaProductos" layoutX="14.0" layoutY="50.0" prefHeight="636.0" prefWidth="632.0" AnchorPane.bottomAnchor="14.0" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="50.0">
                        <columns>
                            <TableColumn fx:id="colID" prefWidth="40.0" text="ID" />
                            <TableColumn fx:id="colCodigo" prefWidth="80.0" text="Código" />
                            <TableColumn fx:id="colNombre" prefWidth="250.0" text="Nombre" />
                            <TableColumn fx:id="colPrecio" prefWidth="90.0" text="Precio" />
                            <TableColumn fx:id="colStock" prefWidth="90.0" text="Stock" />
                            <TableColumn fx:id="colRutaImagen" prefWidth="120.0" text="Ruta Imagen" />
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                    </TableView>
                </children>
            </AnchorPane>

            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0" style="-fx-background-color: #f4f4f4;">
                <children>
                    <VBox layoutX="14.0" layoutY="14.0" prefHeight="672.0" prefWidth="328.0" spacing="15.0" AnchorPane.bottomAnchor="14.0" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="14.0">
                        <children>
                            <Label text="Gestión de Producto" wrapText="true">
                                <font>
                                    <Font name="System Bold" size="20.0" />
                                </font>
                                <VBox.margin>
                                    <Insets bottom="10.0" />
                                </VBox.margin>
                            </Label>

                            <Label text="Nombre:" />
                            <TextField fx:id="txtNombre" promptText="Jugo de Naranja" />

                            <Label text="Código (Único):" />
                            <TextField fx:id="txtCodigo" promptText="P005" />

                            <Label text="Precio (Q):" />
                            <TextField fx:id="txtPrecio" promptText="5.75" />

                            <Label text="Stock Inicial:" />
                            <TextField fx:id="txtStock" promptText="50" />

                            <Label text="Categoría:"/>
                            <ComboBox fx:id="cmbCategoria" prefWidth="330.0" promptText="Seleccione la categoría..." />

                            <Label text="Imagen:" />
                            <TextField fx:id="txtRutaImagen" editable="false" promptText="Seleccione la imagen..." />
                            <Button mnemonicParsing="false" onAction="#seleccionarImagen" prefHeight="30.0" prefWidth="330.0" style="-fx-background-color: #28a745; -fx-text-fill: white;" text="Seleccionar Nueva Imagen" />

                            <Button mnemonicParsing="false" onAction="#guardarProducto" prefHeight="40.0" prefWidth="330.0" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-weight: bold;" text="GUARDAR / ACTUALIZAR" />

                            <Button mnemonicParsing="false" onAction="#eliminarProducto" prefHeight="40.0" prefWidth="330.0" style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-font-weight: bold;" text="ELIMINAR PRODUCTO" />

                            <Button mnemonicParsing="false" onAction="#abrirReporteDeVentas" prefHeight="40.0" prefWidth="330.0" style="-fx-background-color: #17a2b8; -fx-text-fill: white; -fx-font-weight: bold;" text="VER REPORTES DE VENTAS" />

                            <Button mnemonicParsing="false" onAction="#volverAInicio" prefHeight="30.0" prefWidth="330.0" style="-fx-background-color: #6c757d; -fx-text-fill: white;" text="Volver a Inicio" />

                        </children>
                    </VBox>
                </children>
            </AnchorPane>
        </items>
    </SplitPane>
</AnchorPane>